<!--<allow-intent href="*://*.cogni.design/*" />-->
<!--<access origin="*://*.cogni.design/*" />-->
     <!-- Required for iOS9 -->
<gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <allow-navigation href="*://*.cogni.design/*" />
    <allow-navigation href="*://*.api.edmunds.com/*" />
    <allow-navigation href="blob:*" />
    <allow-intent href="*://*.cogni.design/*" />
    <allow-intent href="*://*.api.edmunds.com/*" />

    <access origin="*://*.cogni.design/*" />
    <access origin="*://*.api.edmunds.com/*" />


 <preference name="orientation" value="portrait" />
 <preference name="ios-statusbarstyle"         value="false" />
 <preference name="exit-on-suspend"            value="false" />
 <preference name="webviewbounce" value="false" />
 <preference name="prerendered-icon" value="true" />
<preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardShrinksView" value="false" />
<preference name="loadUrlTimeoutValue" value="700000" />
<preference name="android-windowSoftInputMode" value="adjustPan" />
<preference name="fullscreen" value="false" />
<!-- <preference name="target-device" value="handset" /> -->

 <icon src="icon.png" />
 <splash src="splash.png" />

 <!-- iPhone 6 / 6+ -->

<icon src="icon_splash/res/icons/ios/icon.png" platform="ios" width="57" height="57" />
<icon src="icon_splash/res/icons/ios/icon-2x.png" platform="ios" width="114" height="114" />

<!-- iPhone / iPod Touch  -->
