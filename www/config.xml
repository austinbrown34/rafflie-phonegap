<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.cognishift.fthru"
        versionCode="10"
        version   = "1.0.2">

    <!-- versionCode is optional and Android only -->
    <!--<preference name="phonegap-version" value="3.7.0" />-->
    <name>fTHRU</name>

    <description>
       Follow through done right.
    </description>

    <author href="http://cogni.design" email="austinbrown34@gmail.com">
        Austin Brown
    </author>

<!-- <access origin="*" />
<allow-navigation href="*" />
<allow-intent href="*" /> -->
